<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:backgroundTint">@color/color_default</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:translationZ">10dp</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="login_btn">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/btn_login</item>
        <item name="android:paddingHorizontal">17dp</item>
        <item name="android:layout_marginVertical">4dp</item>
    </style>

</resources>